<Page
    x:Class="WIP2UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WIP2UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:WIP2UWP.Models"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="NormalTextFont">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
    </Page.Resources>
    
    <Grid Background="Black" Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Background="White">
            <TextBlock Text="Left side"/>
            <Button Name="GetPDDataButton" Click="GetPDDataButton_Click" Content="Get PD Data"/>
            <ProgressRing Name="MyProgressRing"
                      Margin="20,0,0,20"  
                      HorizontalAlignment="Left"
                      Width="50" 
                      Height="50" 
                      IsActive="True" />

        </StackPanel>

        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Prority Devies" Style="{StaticResource NormalTextFont}" FontSize="18"/>
                <TextBlock Name="PDPageTextBlock" Text="Page: 0/0" Margin="50,0,0,0" Style="{StaticResource NormalTextFont}" FontSize="18"/>
                <TextBlock Name="PDTotalRowsTextBlock" Text="Total: 0" Margin="50,0,0,0" Style="{StaticResource NormalTextFont}" FontSize="18"/>
                <TextBlock Name="DigitalClockTextBlock" Text="2000-01-01 12:00AM" Margin="50,0,0,0" Style="{StaticResource NormalTextFont}" FontSize="18" TextAlignment="Right"/>
            </StackPanel>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel  Grid.Column="0" BorderThickness="1" BorderBrush="White">
                        <TextBlock Text="Technician" Style="{StaticResource NormalTextFont}"/>
                    </StackPanel>
                    <StackPanel  Grid.Column="1" BorderThickness="1" BorderBrush="White">
                        <TextBlock Text="Aging" Style="{StaticResource NormalTextFont}"/>
                    </StackPanel>
                    <StackPanel  Grid.Column="2" BorderThickness="1" BorderBrush="White">
                        <TextBlock Text="Ref Number" Style="{StaticResource NormalTextFont}"/>
                    </StackPanel>
                    <StackPanel  Grid.Column="3" BorderThickness="1" BorderBrush="White">
                        <TextBlock Text="Date In" Style="{StaticResource NormalTextFont}"/>
                    </StackPanel>
                    <StackPanel  Grid.Column="4" BorderThickness="1" BorderBrush="White">
                        <TextBlock Text="Location" Style="{StaticResource NormalTextFont}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
            
            <StackPanel>
                <GridView Name="MyGridView" ItemsSource="{x:Bind Repairs}">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="0,5,0,5"/>
                            <Setter Property="Padding" Value="0,0,0,0"/>
                            <Setter Property="MinWidth" Value="0" />
                            <Setter Property="MinHeight" Value="0" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalAlignment" Value="Stretch"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="data:Repair">
                            <StackPanel>
                                <Grid Width="700">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.3*"/>
                                        <ColumnDefinition Width="0.7*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Margin="0,0,5,0" Grid.Column="0" >
                                        <TextBlock x:Name="PDTechnicianTextBlock" Text="{Binding LastTechnician}" Style="{StaticResource NormalTextFont}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,5,0" Grid.Column="1" >
                                        <TextBlock x:Name="PDAgingTextBlock" Text="{Binding AGING}" Style="{StaticResource NormalTextFont}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,5,0" Grid.Column="2" >
                                        <TextBlock Name="PDRefTextBlock" Text="{Binding RefNumber}" Style="{StaticResource NormalTextFont}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,5,0" Grid.Column="3" >
                                        <TextBlock Name="PDDateInTextBlock" Text="{Binding DateIn}" Style="{StaticResource NormalTextFont}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,5,0" Grid.Column="4" >
                                        <TextBlock Name="PDLocationTextBlock" Text="{Binding FuturetelLocation}" Style="{StaticResource NormalTextFont}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </StackPanel>


    </Grid>
</Page>
